# Indian Education Law Chatbot - Frontend Environment Configuration

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=30000

# Environment
REACT_APP_ENV=development
REACT_APP_DEBUG=true

# Application Settings
REACT_APP_APP_NAME="Indian Education Law Assistant"
REACT_APP_VERSION=1.0.0

# Legal System Configuration
REACT_APP_DEFAULT_DISCLAIMER="This system provides information from Indian education law sources. It is not a substitute for professional legal advice."
REACT_APP_MAX_MESSAGE_LENGTH=2000
REACT_APP_CHAT_HISTORY_LIMIT=50

# Feature Flags
REACT_APP_ENABLE_VOICE_INPUT=false
REACT_APP_ENABLE_FILE_UPLOAD=false
REACT_APP_ENABLE_EXPORT=false

# Analytics (if needed)
# REACT_APP_GOOGLE_ANALYTICS_ID=
# REACT_APP_MIXPANEL_TOKEN=

# Error Monitoring (if needed)
# REACT_APP_SENTRY_DSN=

# Legal Compliance
REACT_APP_DATA_RETENTION_DAYS=30
REACT_APP_COOKIE_CONSENT=true
REACT_APP_PRIVACY_POLICY_URL="/privacy"
REACT_APP_TERMS_OF_SERVICE_URL="/terms"